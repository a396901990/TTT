<resources>
    <declare-styleable name="RouteChartView">
        <attr name="labelTextSize" format="dimension" />
        <attr name="labelSeparation" format="dimension" />
        <attr name="axisThickness" format="dimension" />
        <attr name="dataThickness" format="dimension" />
        <attr name="gridThickness" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SquareImageView">
        <attr name="labelText" format="string" />
        <attr name="labelSize" format="dimension" />
        <attr name="labelTextColor" format="color|reference" />
        <attr name="imageSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="SquareView">
        <attr name="activeSrc" format="reference" />
        <attr name="disableSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="ChangeColorIconWithTextView">
        <attr name="icon_bg" format="reference" />
        <attr name="text_color" format="color" />
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ChangeColorIconView">
        <attr name="icon_bg" />
        <attr name="color" />
        <attr name="text" />
        <attr name="text_size" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="text_expanded" format="boolean" />
        <attr name="minLines" format="integer" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <!-- Drawable of cursor, press status supported-->
        <attr name="cursor" format="reference" />
        <attr name="selectedBG" format="color" />
        <attr name="unselectedBG" format="color" />
        <attr name="moveDuration" format="integer" />
        <attr name="trackWidth" format="dimension" />
        <attr name="trackPadding" format="dimension" />
        <attr name="cursorTouchExpand" format="dimension" />
        <attr name="status" format="enum">
            <enum name="ON" value="0x00" />
            <enum name="OFF" value="0x01" />
        </attr>

        <!-- about shadow-->
        <attr name="shadowExpand" format="dimension" />
        <attr name="shadowXDiff" format="dimension" />
        <attr name="shadowYDiff" format="dimension" />
        <!-- Drawable of cursor's shadow , Gradientdrawable recommend-->
        <attr name="shadow" format="reference" />
    </declare-styleable>

    <declare-styleable name="RotateLoading">
        <attr name="loading_width" format="dimension" />
        <attr name="loading_color" format="color" />
        <attr name="shadow_position" format="integer" />
    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
        <attr name="pstsTabSwitch" format="boolean" />
        <attr name="pstsActivateTextColor" format="color" />
        <attr name="pstsDeactivateTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MaterialRippleLayout">
        <attr name="rippleColor_mr" format="color" />
        <attr name="rippleDimension" format="dimension" />
        <attr name="rippleOverlay" format="boolean" />
        <attr name="rippleAlpha" format="float" />
        <attr name="rippleDuration" format="integer" />
        <attr name="rippleFadeDuration" format="integer" />
        <attr name="rippleHover" format="boolean" />
        <attr name="rippleBackground" format="color" />
        <attr name="rippleDelayClick" format="boolean" />
        <attr name="ripplePersistent" format="boolean" />
        <attr name="rippleInAdapter" format="boolean"/>
    </declare-styleable>
</resources>
