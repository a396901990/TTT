<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="loading_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Transparent.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="PopupDialog" parent="Transparent.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogPopupAnimation</item>
    </style>

    <style name="TravelTypeDialog" parent="Transparent.Dialog">
    </style>

    <style name="PopupDownDialog" parent="Transparent.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogPopDownAnimation</item>
    </style>

    <style name="DialogPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="DialogPopDownAnimation">
        <item name="android:windowEnterAnimation">@anim/push_down_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="ThemeRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/theme_rating_bar</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:thumb">@null</item>
    </style>

    <!-- 自定义Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Button styles -->
    <style name="BaseButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TransactButton" parent="BaseButton">
        <item name="android:background">@drawable/gray_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">@dimen/generic_padding</item>
        <item name="android:paddingRight">@dimen/generic_padding</item>
    </style>

    <style name="star_rating_bar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_rating_bar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="ThemeButton" parent="TransactButton">
        <item name="android:background">@drawable/theme_btn_background</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_micro</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AroundTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_micro</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Ripple related styles -->
    <style name="RippleStyle">
        <item name="rippleOverlay">true</item>
        <item name="rippleColor_mr">@color/less_light_gray</item>
        <item name="rippleAlpha">0.3</item>
        <item name="rippleDimension">45dp</item>
        <item name="rippleHover">true</item>
        <item name="rippleDuration">200</item>
        <item name="rippleFadeDuration">50</item>
        <item name="rippleBackground">@android:color/transparent</item>
        <item name="rippleDelayClick">true</item>
        <item name="ripplePersistent">false</item>
        <item name="rippleInAdapter">false</item>
    </style>

    <style name="NumberProgressBar_Rate">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_title_size">8sp</item>
        <item name="progress_reached_bar_height">12dp</item>
        <item name="progress_unreached_color">@android:color/transparent</item>
    </style>

    <style name="NumberProgressBar_Rate_Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="progress_text_size">12sp</item>
        <item name="progress_title_size">10sp</item>
        <item name="progress_reached_bar_height">15dp</item>
        <item name="progress_unreached_color">@android:color/transparent</item>
    </style>
</resources>