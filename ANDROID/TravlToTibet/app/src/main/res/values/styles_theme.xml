<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.AppBaseTheme" parent="@android:style/Theme.Holo.Light" />

    <style name="Theme.ChartTheme" parent="Theme.AppBaseTheme">
        <item name="android:actionBarStyle">@style/ChartActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionDropDownStyle">@style/Theme.Spinner</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/gray_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_view</item>
    </style>

    <style name="Theme.HomeTheme" parent="Theme.AppBaseTheme">
        <item name="android:actionBarStyle">@style/HomeActionBar</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <style name="Theme.HomeTheme.White" parent="Theme.AppBaseTheme">
        <item name="android:actionBarStyle">@style/HomeActionBar.White</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <style name="Theme.SettingTheme" parent="Theme.AppBaseTheme">
        <item name="android:actionBarStyle">@style/HomeActionBar</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/gray_background</item>
    </style>

    <style name="Theme.HomeSettingTheme" parent="Theme.AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_back_icon</item>
        <item name="android:actionBarStyle">@style/SettingActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <!--白色主题，白色actionbar-->
    <style name="Theme.WhiteTheme" parent="Theme.AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_back_icon</item>
        <item name="android:actionBarStyle">@style/WhiteActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionMenuTextColor">@color/dark_gray</item>
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gray_background</item>
    </style>

    <style name="Theme.White" parent="Theme.AppBaseTheme">
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <style name="ChartActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="HomeActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="HomeActionBar.White" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="SettingActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <!--白色actionbar主题-->
    <style name="WhiteActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:titleTextStyle">@style/White.Theme.ActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="AnimationUpDown" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_in</item>
    </style>

    <style name="Theme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="White.Theme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Translucent.NoTitleBar" parent="Theme.AppBaseTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Up.Translucent" parent="Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimationUpDown</item>
    </style>

    <style name="Theme.Spinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_ab_holo_dark</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="ChartHeaderBar.Text" parent="@style/TextAppearance.Small">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="ChartHeaderBar.Text.Title" parent="@style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="DropDownNavigation">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DropDownItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_ab_holo_dark</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:dropDownSelector">#FFFFFF</item>
        <item name="android:popupBackground">#335233</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">34sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--plan list-->
    <style name="PlanList.Text" parent="@style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>