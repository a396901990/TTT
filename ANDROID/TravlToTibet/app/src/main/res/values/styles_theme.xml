<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.AppBaseTheme" parent="@android:style/Theme.Holo.Light" />

    <style name="Theme.ChartTheme" parent="Theme.AppBaseTheme">
        <item name="android:actionBarStyle">@style/ChartActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionDropDownStyle">@style/Theme.Spinner</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/gray_background</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gray_background</item>
    </style>

    <style name="Theme.White" parent="Theme.AppBaseTheme">
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <style name="ChartActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/light_blue</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Translucent.NoTitleBar" parent="Theme.AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="Theme.Spinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_ab_holo_dark</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ChartHeaderBar">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="ChartHeaderBar.Text" parent="@style/TextAppearance.Small">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="ChartHeaderBar.Text.Title" parent="@style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="ChartHeaderBar.Button" parent="@style/ChartHeaderBar.Text">
        <item name="android:background">@drawable/chart_header_btn</item>
        <item name="android:layout_margin">@dimen/chart_header_button_margin</item>
        <item name="android:padding">@dimen/chart_header_button_padding</item>
        <item name="android:minHeight">@dimen/chart_header_button_min_height</item>
        <item name="android:minWidth">@dimen/chart_header_button_min_width</item>
    </style>

    <style name="DropDownNavigation">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="DropDownItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_ab_holo_dark</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:dropDownSelector">#FFFFFF</item>
        <item name="android:popupBackground">#335233</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">34sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--plan list-->
    <style name="PlanList.Text" parent="@style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Button styles -->
    <style name="BaseButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/transact_button_margin</item>
        <item name="android:layout_marginRight">@dimen/transact_button_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TransactButton" parent="BaseButton">
        <item name="android:background">@drawable/gray_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">@dimen/generic_padding</item>
        <item name="android:paddingRight">@dimen/generic_padding</item>
    </style>

    <style name="RedButton" parent="TransactButton">
        <item name="android:background">@drawable/red_btn</item>
    </style>

    <style name="LightGreenButton" parent="TransactButton">
        <item name="android:background">@drawable/bright_green</item>
    </style>

    <style name="LightRedButton" parent="TransactButton">
        <item name="android:background">@drawable/bright_red</item>
    </style>

    <style name="OrangeRedButton" parent="TransactButton">
        <item name="android:background">@drawable/orange_red_btn</item>
    </style>

    <style name="DarkGrayButton" parent="TransactButton">
        <item name="android:background">@drawable/dark_gray_btn</item>
    </style>

    <style name="OrangeButton" parent="TransactButton">
        <item name="android:background">@drawable/yellow_btn</item>
    </style>

</resources>