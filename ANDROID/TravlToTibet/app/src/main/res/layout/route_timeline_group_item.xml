<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/guide_time_line_item_padding"
    android:paddingTop="@dimen/guide_time_line_item_padding">

    <ImageView
        android:id="@+id/title_indicator"
        android:layout_width="@dimen/guide_time_line_title_image_width"
        android:layout_height="@dimen/guide_time_line_title_image_height"
        android:padding="3dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/guide_time_line_title_margin_left"
        android:layout_marginRight="@dimen/guide_time_line_title_margin_right" />

    <TextView
        android:id="@+id/title_name"
        style="@style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

</LinearLayout>