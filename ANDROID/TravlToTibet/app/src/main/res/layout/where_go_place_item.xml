<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_white"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/place_title"
        style="@style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新藏线" />

    <TextView
        android:id="@+id/place_distance"
        style="@style/TextAppearance.Small.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2355KM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <com.dean.travltotibet.ui.ratingview.NumberProgressBar
            android:id="@+id/rate_hard"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            style="@style/NumberProgressBar_Rate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:progress_current="8"
            app:progress_max="10"
            app:progress_reached_color="@color/light_gray"
            app:progress_text_color="@color/light_gray"
            app:progress_title="难度" />

        <com.dean.travltotibet.ui.ratingview.NumberProgressBar
            android:id="@+id/rate_view"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            style="@style/NumberProgressBar_Rate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:progress_current="5"
            app:progress_max="10"
            app:progress_reached_color="@color/light_gray"
            app:progress_text_color="@color/light_gray"
            app:progress_title="风景" />

        <com.dean.travltotibet.ui.ratingview.NumberProgressBar
            android:id="@+id/rate_road"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            style="@style/NumberProgressBar_Rate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:progress_current="10"
            app:progress_max="10"
            app:progress_reached_color="@color/light_gray"
            app:progress_text_color="@color/light_gray"
            app:progress_title="路况" />
    </LinearLayout>
</LinearLayout>
