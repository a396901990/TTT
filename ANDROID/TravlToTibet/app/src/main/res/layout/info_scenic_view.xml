<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/card_half_padding">

    <!--标题-->
    <TextView
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding"
        android:text="@string/info_scenic_title" />

    <!--内容视图-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/scenic_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scenic_card_height"
        android:layout_marginBottom="@dimen/card_half_padding"
        android:clipToPadding="false"
        android:fadeScrollbars="true"
        android:scrollbars="none" />
</LinearLayout>

