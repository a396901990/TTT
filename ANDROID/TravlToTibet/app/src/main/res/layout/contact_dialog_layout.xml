<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_text"
            android:layout_margin="@dimen/card_large_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hotel_contact_detail_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="QQ" />

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qq_text"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                style="@style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_qq" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/qq_copy_btn"
                android:layout_alignParentRight="true"
                style="@style/TextAppearance.Small.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="QQç¾¤" />

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qq_group_text"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                style="@style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_qq_group" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/qq_group_copy_btn"
                android:layout_alignParentRight="true"
                style="@style/TextAppearance.Small.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="E-MAIL" />

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email_text"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                style="@style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_email" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/email_copy_btn"
                android:layout_alignParentRight="true"
                style="@style/TextAppearance.Small.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>