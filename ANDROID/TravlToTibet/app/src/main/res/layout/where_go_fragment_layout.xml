<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:fadingEdgeLength="0dip"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--长线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/where_go_content_padding">

            <!--标题-->
            <TextView
                style="@style/TextAppearance.Medium.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/where_go_item_padding"
                android:background="@drawable/border_theme"
                android:padding="3dp"
                android:text="长线" />

            <com.dean.travltotibet.ui.customScrollView.ScrollGridView
                android:id="@+id/lang_distance_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="@dimen/where_go_item_padding"
                android:numColumns="@integer/where_go_grid_columns_num"
                android:padding="@dimen/where_go_card_padding"
                android:verticalSpacing="@dimen/where_go_item_padding"></com.dean.travltotibet.ui.customScrollView.ScrollGridView>
        </LinearLayout>

        <!--中线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/where_go_content_padding">


            <!--标题-->
            <TextView
                style="@style/TextAppearance.Medium.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/where_go_item_padding"
                android:background="@drawable/border_theme"
                android:padding="3dp"
                android:text="中线" />

            <com.dean.travltotibet.ui.customScrollView.ScrollGridView
                android:id="@+id/middle_distance_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="@dimen/where_go_item_padding"
                android:numColumns="@integer/where_go_grid_columns_num"
                android:padding="@dimen/where_go_card_padding"
                android:verticalSpacing="@dimen/where_go_item_padding"></com.dean.travltotibet.ui.customScrollView.ScrollGridView>
        </LinearLayout>

        <!--短线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/where_go_content_padding">

            <!--标题-->
            <TextView
                style="@style/TextAppearance.Medium.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/where_go_item_padding"
                android:background="@drawable/border_theme"
                android:padding="3dp"
                android:text="短线" />

            <com.dean.travltotibet.ui.customScrollView.ScrollGridView
                android:id="@+id/short_distance_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="@dimen/where_go_item_padding"
                android:numColumns="@integer/where_go_grid_columns_num"
                android:padding="@dimen/where_go_card_padding"
                android:verticalSpacing="@dimen/where_go_item_padding"></com.dean.travltotibet.ui.customScrollView.ScrollGridView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>