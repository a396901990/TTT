<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dean.travltotibet.ui.MaterialRippleLayout
        android:id="@+id/ripple_view"
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/less_light_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp">

                <!--header-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--头像-->
                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/user_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/gray_profile"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="0dp" />

                    <!--用户名称-->
                    <TextView
                        android:id="@+id/user_name"
                        style="@style/TextAppearance.Micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/user_icon"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:text="户外探子"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/watch"
                        style="@style/TextAppearance.Mini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/border_half_blue"
                        android:paddingBottom="1dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="1dp"
                        android:text="30"
                        android:textColor="@color/colorPrimary" />
                </RelativeLayout>

                <!--content-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="3dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/content_text"
                        style="@style/TextAppearance.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="7月份，自驾青藏线，求妹子~~7月份，自驾青藏线，求妹子~~7月份."
                        android:textColor="@color/dark_gray" />

                    <include
                        android:id="@+id/image_content"
                        layout="@layout/show_image_content_view"
                        android:visibility="gone"></include>
                </LinearLayout>

                <!--bottom 标签+观看次数-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/tag_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:src="@drawable/icon_tag" />

                    <!--标签-->
                    <com.dean.travltotibet.ui.FlowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tag_icon"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/destination_name"
                            style="@style/TextAppearance.Mini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/border_tab_one"
                            android:paddingBottom="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="1dp"
                            android:text="川藏线,川藏线,川藏线,川藏线,川藏线,川藏线"
                            android:textColor="@color/background_selected" />

                        <TextView
                            android:id="@+id/type_name"
                            style="@style/TextAppearance.Mini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/border_tab_two"
                            android:paddingBottom="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="1dp"
                            android:text="自行车骑行"
                            android:textColor="@color/background_selected" />

                        <TextView
                            android:id="@+id/date_name"
                            style="@style/TextAppearance.Mini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/border_tab_three"
                            android:paddingBottom="1dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="1dp"
                            android:text="2015.3.3 - 2014.5.39"
                            android:textColor="@color/background_selected" />
                    </com.dean.travltotibet.ui.FlowLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/less_light_gray"></View>
        </LinearLayout>

    </com.dean.travltotibet.ui.MaterialRippleLayout>

    <RelativeLayout
        android:id="@+id/warning_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_dark_gray"
        android:visibility="gone">

        <TextView
            android:id="@+id/warning_text"
            style="@style/TextAppearance.Large.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/dark_gray"
            android:padding="10dp"
            android:text="@string/warning_no_pass" />
    </RelativeLayout>
</FrameLayout>