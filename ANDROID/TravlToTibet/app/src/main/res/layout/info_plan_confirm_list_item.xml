<?xml version="1.0" encoding="utf-8"?>
<com.dean.travltotibet.ui.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ripple_view"
    style="@style/RippleStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/half_colorPrimary"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dip">


            <TextView
                android:id="@+id/plan_name"
                style="@style/TextAppearance.Small.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:text="正常（推荐）"
                android:textColor="@color/dark_gray" />

            <!--介绍-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="right|bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plan_day"
                    style="@style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31天"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/plan_describe"
                    style="@style/TextAppearance.Micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="适合大多数骑友人"
                    android:textColor="@color/gray" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</com.dean.travltotibet.ui.MaterialRippleLayout>