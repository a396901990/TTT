<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <!--标题-->
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding">

                <RelativeLayout
                    android:id="@+id/title_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <!--内容-->
                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="问题标题" />

                    <TextView
                        style="@style/TitleText"
                        android:id="@+id/text_title_limit_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0/50" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/title_edit_text"
                    style="@style/TextAppearance.Regular"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_above="@+id/picker_image_list_rv"
                    android:layout_below="@+id/title_header_view"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="@string/q_a_title_hint"
                    android:paddingTop="10dp"
                    android:textColor="@color/dark_gray" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--内容-->
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/card_padding">

                <RelativeLayout
                    android:id="@+id/header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <!--内容-->
                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="问题描述" />

                    <TextView
                        android:id="@+id/text_content_limit_hint"
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0/666" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/content_edit_text"
                    style="@style/TextAppearance.Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/header_view"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="@string/q_a_content_hint"
                    android:paddingTop="10dp"
                    android:textColor="@color/dark_gray" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>