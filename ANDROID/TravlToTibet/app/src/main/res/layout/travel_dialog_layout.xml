<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.dean.travltotibet.ui.SquareImageView
            android:background="@drawable/btn_click_background"
            android:id="@+id/travel_bike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:imageSrc="@drawable/icon_bike_dark_blue"
            app:labelText="骑行"
            app:labelTextColor="@color/dark_blue" />

        <com.dean.travltotibet.ui.SquareImageView
            android:background="@drawable/btn_click_background"
            android:id="@+id/travel_hike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:imageSrc="@drawable/icon_hike_dark_blue"
            app:labelText="徒步"
            app:labelTextColor="@color/dark_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.dean.travltotibet.ui.SquareImageView
            android:background="@drawable/btn_click_background"
            android:id="@+id/travel_moto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:imageSrc="@drawable/icon_moto_dark_blue"
            app:labelText="摩托"
            app:labelTextColor="@color/dark_blue" />

        <com.dean.travltotibet.ui.SquareImageView
            android:background="@drawable/btn_click_background"
            android:id="@+id/travel_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:imageSrc="@drawable/icon_car_dark_blue"
            app:labelText="自驾"
            app:labelTextColor="@color/dark_blue" />
    </LinearLayout>

</LinearLayout>
