<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <!--准备视图卡片-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/info_card_margin"
        android:background="@drawable/border_gray"
        android:orientation="vertical"
        android:padding="@dimen/info_card_padding">

        <!--标题-->
        <TextView
            style="@style/TextAppearance.Medium.Bold"
            android:textColor="@color/orange_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_prepare_title" />

        <!--标题分割-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_card_rule_height"
            android:layout_marginBottom="@dimen/info_card_rule_margin"
            android:layout_marginTop="@dimen/info_card_rule_margin"
            android:background="@color/orange_red"></View>

        <!--内容视图-->
        <com.dean.travltotibet.ui.ScrollGridView
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/info_card_grid_margin"
            android:background="@color/gray_background"
            android:horizontalSpacing="@dimen/info_card_grid_space"
            android:numColumns="3"
            android:verticalSpacing="@dimen/info_card_grid_space"></com.dean.travltotibet.ui.ScrollGridView>
    </LinearLayout>


</LinearLayout>
