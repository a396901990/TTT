<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/detail_distance_content"
            android:layout_width="35dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/detail_distance"
                android:layout_centerHorizontal="true"
                android:background="@color/less_light_gray" />

            <TextView
                android:id="@+id/detail_distance"
                style="@style/TextAppearance.Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="23km"
                android:textColor="@color/gray" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/detail_distance"
                android:layout_centerHorizontal="true"
                android:background="@color/less_light_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:id="@+id/top_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <!--海拔-->
                <TextView
                    android:id="@+id/detail_height"
                    style="@style/TextAppearance.Micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海拔"
                    android:textColor="@color/dark_blue" />

                <!--位置-->
                <TextView
                    android:id="@+id/detail_milestone"
                    style="@style/TextAppearance.Micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置"
                    android:textColor="@color/dark_green" />
            </LinearLayout>

            <!--描述攻略细节-->
            <LinearLayout
                android:id="@+id/detail_guide_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/blue_btn_active"
                android:padding="5dp">

                <TextView
                    android:id="@+id/detail_guide"
                    style="@style/TextAppearance.Micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>