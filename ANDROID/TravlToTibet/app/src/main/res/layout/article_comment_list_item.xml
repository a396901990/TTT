<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <!--头像-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/comment_item_base_length"
        android:layout_height="@dimen/comment_item_base_length"
        android:layout_marginBottom="@dimen/comment_item_base_padding"
        android:layout_marginRight="@dimen/comment_item_base_padding"
        android:layout_marginTop="@dimen/comment_item_base_padding"
        android:src="@drawable/gray_profile"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--名字时间点赞-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/comment_item_base_padding">

            <LinearLayout
                android:id="@+id/profile_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/left_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_text"
                    style="@style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="匿名用户"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/comment_date"
                    style="@style/TextAppearance.Small.Gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="2015-09-17" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/like_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/comment_item_base_length"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/like_text"
                    style="@style/TextAppearance.Medium.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:text="221" />

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/comment_item_base_padding"
                    android:src="@drawable/icon_like_gray" />
            </LinearLayout>
        </RelativeLayout>

        <!--评论-->
        <LinearLayout
            android:id="@+id/comment_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/comment_item_base_padding">

            <LinearLayout
                android:id="@+id/reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@drawable/border_reply_comment_background"
                android:orientation="vertical"
                android:padding="6dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/reply_comment_username"
                    style="@style/TextAppearance.Theme.Small.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="户外探子" />

                <TextView
                    android:id="@+id/reply_comment_text"
                    style="@style/TextAppearance.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="naocannaocn" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment_text"
                style="@style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="真心是个好地阿芳，推荐大家都去看看，很漂亮的哦~~~" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>