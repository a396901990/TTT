<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/contact_edit_text"
            style="@style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_theme_line"
            android:padding="10dp"
            android:singleLine="true" />

    </LinearLayout>

    <com.dean.travltotibet.ui.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/ok_btn"
            style="@style/TextAppearance.Large.Bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_bottom_btn_height"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/colorPrimary" />

    </com.dean.travltotibet.ui.MaterialRippleLayout>
</LinearLayout>