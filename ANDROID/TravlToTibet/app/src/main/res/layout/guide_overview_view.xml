<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overview_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/card_padding">

    <!--标题-->
    <TextView
        android:id="@+id/overview_title"
        style="@style/TextAppearance.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/guide_title_view_margin_bottom"
        android:background="@drawable/border_theme"
        android:padding="@dimen/guide_title_view_padding"
        android:text="简介" />

    <!--地点： 叶城-拉萨-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="2dp">

        <TextView
            android:id="@+id/overview_start"
            style="@style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="叶城" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/overview_end"
            style="@style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="拉萨" />
    </LinearLayout>

    <!--分成左右两份-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--item list-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--全长-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="@dimen/guide_brief_icon_size"
                    android:layout_height="@dimen/guide_brief_icon_size"
                    android:paddingLeft="@dimen/guide_brief_icon_padding"
                    android:paddingRight="@dimen/guide_brief_icon_padding"
                    app:iiv_color="@color/dark_blue"
                    app:iiv_icon="gmd_confirmation_number" />

                <TextView
                    style="@style/TextAppearance.Micro.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="全长"
                    android:textColor="@color/dark_blue" />

                <TextView
                    android:id="@+id/overview_distance"
                    style="@style/TextAppearance.Micro.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="2865KM"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!--计划-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="@dimen/guide_brief_icon_size"
                    android:layout_height="@dimen/guide_brief_icon_size"
                    android:paddingLeft="@dimen/guide_brief_icon_padding"
                    android:paddingRight="@dimen/guide_brief_icon_padding"
                    app:iiv_color="@color/dark_green"
                    app:iiv_icon="gmd_event_note" />

                <TextView
                    style="@style/TextAppearance.Micro.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="计划"
                    android:textColor="@color/dark_green" />

                <TextView
                    android:id="@+id/overview_plan"
                    style="@style/TextAppearance.Micro.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="32天"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!--难度-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/overview_rate"
                    android:layout_width="@dimen/guide_brief_icon_size"
                    android:layout_height="@dimen/guide_brief_icon_size"
                    android:paddingLeft="@dimen/guide_brief_icon_padding"
                    android:paddingRight="@dimen/guide_brief_icon_padding"
                    app:iiv_color="@color/dark_orange"
                    app:iiv_icon="gmd_access_time" />

                <TextView
                    style="@style/TextAppearance.Micro.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="用时"
                    android:textColor="@color/dark_orange" />

                <TextView
                    android:id="@+id/overview_hours"
                    style="@style/TextAppearance.Micro.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:text="约8-11小时"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="3dp">

            <com.dean.travltotibet.ui.numberprogressbar.NumberProgressBar
                android:id="@+id/rate_hard"
                style="@style/NumberProgressBar_Rate_Large"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                app:progress_current="8"
                app:progress_max="10"
                app:progress_reached_color="#E74C3C"
                app:progress_text_color="#E74C3C"
                app:progress_title="难度" />

            <com.dean.travltotibet.ui.numberprogressbar.NumberProgressBar
                android:id="@+id/rate_view"
                style="@style/NumberProgressBar_Rate_Large"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                app:progress_current="5"
                app:progress_max="10"
                app:progress_reached_color="#6DBCDB"
                app:progress_text_color="#6DBCDB"
                app:progress_title="风景" />

            <com.dean.travltotibet.ui.numberprogressbar.NumberProgressBar
                android:id="@+id/rate_road"
                style="@style/NumberProgressBar_Rate_Large"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                app:progress_current="10"
                app:progress_max="10"
                app:progress_reached_color="#FFC73B"
                app:progress_text_color="#FFC73B"
                app:progress_title="路况" />
        </LinearLayout>

    </LinearLayout>

    <!--描述-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/overview_describe"
            style="@style/TextAppearance.Small.Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end" />
    </RelativeLayout>

</LinearLayout>
