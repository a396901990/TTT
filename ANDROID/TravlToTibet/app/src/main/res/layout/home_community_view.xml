<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dean.travltotibet.ui.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            app:pstsActivateTextColor="@color/dark_gray"
            app:pstsDeactivateTextColor="@color/gray"
            app:pstsDividerColor="@android:color/transparent"
            app:pstsIndicatorColor="@color/colorPrimary"
            app:pstsIndicatorHeight="10px"
            app:pstsShouldExpand="true"
            app:pstsTabSwitch="true"
            app:pstsUnderlineColor="@color/less_light_gray"
            app:pstsUnderlineHeight="1dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs"
            android:fillViewport="true"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"></android.support.v4.view.ViewPager>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.dean.travltotibet.ui.fab.FloatingActionMenu xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="4dp"
            android:padding="10dp"
            fab:menu_animationDelayPerItem="0"
            fab:menu_backgroundColor="@color/less_light_gray"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_position="left"
            fab:menu_labels_singleLine="true"
            fab:menu_openDirection="up">

            <com.dean.travltotibet.ui.fab.FloatingActionButton
                android:id="@+id/team_create_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search"
                fab:fab_label="发布结伴信息"
                fab:fab_size="mini" />

            <com.dean.travltotibet.ui.fab.FloatingActionButton
                android:id="@+id/ask_create_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search"
                fab:fab_label="发布问题"
                fab:fab_size="mini" />

        </com.dean.travltotibet.ui.fab.FloatingActionMenu>

    </RelativeLayout>

</FrameLayout>