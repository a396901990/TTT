<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/name"
        style="@style/TextAppearance.Regular"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/chart_setting_checkbox_margin"
        android:gravity="center_vertical" />

    <com.dean.travltotibet.ui.SwitchButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:paddingRight="@dimen/chart_setting_switch_padding_right"
        app:cursor="@drawable/circle_filled"
        app:moveDuration="50"
        app:selectedBG="@color/dark_blue"
        app:shadow="@drawable/switch_button_shadow"
        app:status="OFF"
        app:trackPadding="1dp"
        app:trackWidth="40dp"
        app:unselectedBG="#eeeeee" />

</FrameLayout>