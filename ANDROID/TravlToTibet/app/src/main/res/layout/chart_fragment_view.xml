<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/chartContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dean.travltotibet.ui.RouteChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/indicator"
            android:background="@color/white_background"
            android:paddingTop="5dip"
            app:axisThickness="1dp"
            app:gridThickness="1dp"
            app:labelSeparation="3dp"
            app:labelTextSize="@dimen/chart_label_text_size" />

        <com.dean.travltotibet.ui.IndicatorChartView
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/indicator_chartview_height"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--悬浮显示细节-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_position_name"
            style="@style/ChartHeaderBar.Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/header_position_height"
            style="@style/ChartHeaderBar.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/header_position_mileage"
            style="@style/ChartHeaderBar.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <!--设置按钮-->
    <RelativeLayout
        android:layout_gravity="right"
        android:id="@+id/chart_setting_btn"
        android:layout_width="@dimen/map_btn_width"
        android:layout_height="@dimen/map_btn_width"
        android:layout_marginRight="@dimen/map_btn_padding_length"
        android:layout_marginTop="@dimen/map_btn_padding_length"
        android:background="@drawable/chart_btn_border">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:src="@drawable/setting_icon_white" />
    </RelativeLayout>
</FrameLayout>