<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hidden_top_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/show_bottom_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/show_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <!--详细-->
        <fragment
            android:id="@+id/around_select_fragment"
            android:name="com.dean.travltotibet.fragment.AroundSelectFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>



