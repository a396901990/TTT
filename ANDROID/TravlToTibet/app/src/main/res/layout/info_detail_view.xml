<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--准备视图卡片-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_white"
        android:orientation="vertical"
        android:padding="@dimen/info_card_padding">

        <TextView
            android:id="@+id/detail_route_name"
            style="@style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介："
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/detail_route_start_end"
            style="@style/TextAppearance.Small.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都-拉萨" />

        <TextView
            android:id="@+id/detail_route_distance"
            style="@style/TextAppearance.Small.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2382M" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--扩展文字视图-->
            <com.dean.travltotibet.ui.ExpandableTextView
                android:id="@+id/expandable_text_view"
                style="@style/TextAppearance.Small.Gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:paddingTop="10dp"
                app:expanded="false"
                app:minLines="3" />

            <!--阴影-->
            <View
                android:id="@+id/bottom_shade"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/expandable_text_view"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bottom_shade_background"></View>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
