<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="@color/white"></android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/article_bottom_height"
            android:nestedScrollingEnabled="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--详细-->
                <fragment
                    android:id="@+id/detail_fragment"
                    android:name="com.dean.travltotibet.fragment.RoadInfoDetailFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--评论-->
                <FrameLayout
                    android:id="@+id/comment_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fragment
                        android:id="@+id/comment_fragment"
                        android:name="com.dean.travltotibet.fragment.RoadInfoCommentFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </LinearLayout>
        </ScrollView>

        <!--阴影、去空白-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_toolbar_shadow_height"
            android:background="@drawable/top_shade_background" />

        <!--底部-->
        <include layout="@layout/base_comment_bottom_view"></include>
    </FrameLayout>
</RelativeLayout>



