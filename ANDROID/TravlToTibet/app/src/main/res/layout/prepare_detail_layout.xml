<?xml version="1.0" encoding="utf-8"?><!--路线视图-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:transitionName="actionBar"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>

            <com.dean.travltotibet.ui.PagerSlidingTabStrip xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/home_tabs"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:pstsActivateTextColor="@color/white"
                app:pstsDeactivateTextColor="@color/half_white"
                app:pstsDividerColor="@android:color/transparent"
                app:pstsIndicatorColor="@color/white"
                app:pstsIndicatorHeight="10px"
                app:pstsShouldExpand="true"
                app:pstsTabSwitch="true"
                app:pstsUnderlineColor="@android:color/transparent" />

            <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/tabs"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom"-->
            <!--app:tabGravity="fill"-->
            <!--app:tabIndicatorColor="@color/white"-->
            <!--app:tabIndicatorHeight="4dp"-->
            <!--app:tabTextColor="@color/half_white" />-->

        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/content_view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_toolbar_shadow_height"
        android:layout_below="@+id/content_view"
        android:background="@drawable/top_shade_background" />

</RelativeLayout>



