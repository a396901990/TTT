<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/less_light_gray">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/profile_image">

            <TextView
                android:id="@+id/profile_text"
                style="@style/TextAppearance.XXLarge.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/login_text" />

            <!--用户性别-->
            <View
                android:id="@+id/user_gender"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/male_gender_view" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/login_profile_size"
            android:layout_height="@dimen/login_profile_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/gray_profile"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_publish"
            android:padding="5dp"
            android:background="@drawable/border_gray_background"
            android:layout_marginRight="10dp"
            style="@style/TextAppearance.Small.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的发布" />

        <TextView
            android:id="@+id/my_favorite"
            android:padding="5dp"
            android:background="@drawable/border_gray_background"
            android:layout_marginRight="10dp"
            style="@style/TextAppearance.Small.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏" />

        <TextView
            android:padding="5dp"
            android:background="@drawable/border_gray_background"
            style="@style/TextAppearance.Small.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复" />

    </LinearLayout>
</RelativeLayout>
