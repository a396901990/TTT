<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--内容-->
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--标题-->
                <TextView
                    android:id="@+id/title_text"
                    style="@style/TextAppearance.XLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="top"
                    android:text="@string/q_a_content_hint" />

                <!--内容-->
                <TextView
                    android:id="@+id/message_text"
                    style="@style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="top"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="hahahahahahah" />

                <!--发布时间-->
                <TextView
                    android:id="@+id/publish_time"
                    style="@style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/card_large_padding"
                    android:text="5分钟前"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/card_padding"
                android:layout_marginTop="@dimen/card_padding"
                android:background="@color/rule"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.dean.travltotibet.ui.FlowLayout
                    android:id="@+id/same_question_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btn_content"></com.dean.travltotibet.ui.FlowLayout>

                <LinearLayout
                    android:id="@+id/btn_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <!--同问按钮-->
                    <TextView
                        android:id="@+id/same_question_btn"
                        style="@style/TextAppearance.Small.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_theme"
                        android:paddingBottom="@dimen/card_half_padding"
                        android:paddingLeft="@dimen/card_large_padding"
                        android:paddingRight="@dimen/card_large_padding"
                        android:paddingTop="@dimen/card_half_padding"
                        android:text="同问" />

                    <!--回答按钮-->
                    <TextView
                        android:id="@+id/answer_btn"
                        style="@style/TextAppearance.Small.White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_half_padding"
                        android:background="@drawable/border_theme"
                        android:paddingBottom="@dimen/card_half_padding"
                        android:paddingLeft="@dimen/card_large_padding"
                        android:paddingRight="@dimen/card_large_padding"
                        android:paddingTop="@dimen/card_half_padding"
                        android:text="回答" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>