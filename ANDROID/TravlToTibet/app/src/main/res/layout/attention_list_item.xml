<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/card_margin"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <!--标题-->
    <TextView
        android:id="@+id/attention_title"
        style="@style/TextAppearance.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/guide_title_view_margin_bottom"
        android:background="@drawable/border_theme"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="行程" />

    <TextView
        android:id="@+id/attention_detail"
        style="@style/TextAppearance.Small.Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="啦啦啦" />
</LinearLayout>
